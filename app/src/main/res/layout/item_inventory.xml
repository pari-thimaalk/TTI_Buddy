<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/cardview"
    android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/itemcardview"
        android:background="@drawable/ripple_effect">
        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:id="@+id/plainview"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameTextView"
                android:text="item"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/secondarytextview"
                android:text="let's see"
                android:textSize="12dp"
                android:textColor="@color/cardview_dark_background"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantityTextView"
            android:text="100"
            android:padding="10dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>